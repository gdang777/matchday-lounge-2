rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions ───────────────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isAuthenticated()
        && request.auth.token.role == 'ADMIN';
    }

    function isServiceAccount() {
      // API / Cloud Run writes via Admin SDK bypass rules;
      // this is a placeholder for emulator-mode checks
      return false;
    }

    // ── Users ──────────────────────────────────────────────────────────────
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // ── Fixtures (Real-time, scraped by services/scraper) ─────────────────
    // High-frequency reads; written only by backend services
    match /fixtures/{fixtureId} {
      allow read: if true;                     // Public read
      allow write: if isAdmin();               // Write via Admin SDK (scraper)

      // Live fan count sub-document — updated by Cloud Function on check-in
      match /liveCount/{countId} {
        allow read: if true;
        allow write: if false;                 // Functions only
      }
    }

    // ── Check-ins (High-frequency writes, one per user per fixture) ────────
    match /checkIns/{checkInId} {
      allow read: if isAuthenticated();

      // Create: must be own check-in, userId field must match
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['userId', 'fixtureId', 'venueId', 'createdAt']);

      // Delete own check-in only
      allow delete: if isOwner(resource.data.userId);

      // No updates — delete and re-create
      allow update: if false;
    }

    // ── Live Counts (aggregated, written by Cloud Functions only) ──────────
    match /liveCounts/{fixtureId} {
      allow read: if true;
      allow write: if false;                   // Cloud Function writes only
    }

    // ── Gigs ───────────────────────────────────────────────────────────────
    match /gigs/{gigId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.postedBy == request.auth.uid;
      allow update, delete: if isOwner(resource.data.postedBy);
    }

    // ── Chats ──────────────────────────────────────────────────────────────
    match /chats/{chatId} {
      allow read: if isAuthenticated()
        && request.auth.uid in resource.data.members;
      allow create: if isAuthenticated();

      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated()
          && request.resource.data.senderId == request.auth.uid;
      }
    }

    // ── Deny everything else ───────────────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
