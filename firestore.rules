rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions ───────────────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isAuthenticated()
        && request.auth.token.role == 'ADMIN';
    }

    // ── Fixtures (Real-time, scraped by services/scraper) ─────────────────
    // FIFA World Cup 2026 match data — high-frequency reads
    match /fixtures/{fixtureId} {
      allow read: if true;                     // Public read
      allow write: if isAdmin();               // Write via Admin SDK (scraper)

      // Live fan count sub-document — updated by Cloud Function on check-in
      match /liveCount/{countId} {
        allow read: if true;
        allow write: if false;                 // Functions only
      }
    }

    // ── Check-ins (High-frequency writes, one per user per fixture) ────────
    match /checkIns/{checkInId} {
      allow read: if isAuthenticated();

      // Create: must be own check-in, userId field must match
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['userId', 'fixtureId', 'venueId', 'createdAt']);

      // Delete own check-in only
      allow delete: if isOwner(resource.data.userId);

      // No updates — delete and re-create
      allow update: if false;
    }

    // ── Live Counts (aggregated, written by Cloud Functions only) ──────────
    match /liveCounts/{fixtureId} {
      allow read: if true;
      allow write: if false;                   // Cloud Function writes only
    }

    // ── City Content (transit guides, emergency info, language guides) ─────
    // Static content managed by App Admin Panel, served to all users
    match /cityContent/{contentId} {
      allow read: if true;                     // Public read
      allow write: if isAdmin();               // Admin-managed
    }

    // ── Fan Zones ──────────────────────────────────────────────────────────
    match /fanZones/{zoneId} {
      allow read: if true;                     // Public read
      allow write: if isAdmin();               // Admin-managed
    }

    // ── AI Deal Alert Queue (Pro users, written by Cloud Run agent) ────────
    match /dealAlerts/{alertId} {
      allow read: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow write: if false;                   // Cloud Run service only
    }

    // ── Deny everything else ───────────────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
